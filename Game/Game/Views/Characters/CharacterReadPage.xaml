<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.CharacterReadPage"
             Title="{Binding Title}"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Style="{StaticResource OuterBoxStack}">
                <StackLayout Orientation="Horizontal">
                    <ImageButton Source="leftarrow.png"
                                 Aspect="AspectFit"
                                 HorizontalOptions="Start"
                                 Clicked="Back_Clicked"
                                 Padding="10"
                                 WidthRequest="65"
                                 HeightRequest="65" />

                    <Label FontSize="Large"
                           FontAttributes="Bold, Italic"
                           HorizontalOptions="CenterAndExpand"
                           VerticalOptions="FillAndExpand"
                           Text="{Binding Data.Name, StringFormat= 'Character: {0:G}'}"
                           Style="{StaticResource ValueStyle}" />

                    <ImageButton Source="icon_delete.png"
                                 Aspect="AspectFit"
                                 HorizontalOptions="End"
                                 Clicked="Delete_Clicked"
                                 Padding="10"
                                 WidthRequest="65"
                                 HeightRequest="65" />

                    <ImageButton Source="icon_edit.png"
                                 Aspect="AspectFit"
                                 HorizontalOptions="End"
                                 Clicked="Update_Clicked"
                                 Padding="10"
                                 WidthRequest="65"
                                 HeightRequest="65" />
                </StackLayout>
                <Grid x:Name="FormLayoutGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackLayout Grid.Row="0"
                                 Grid.Column="0"
                                 HorizontalOptions="FillAndExpand"
                                 VerticalOptions="FillAndExpand"
                                 Style="{StaticResource OuterBoxStack}">

                        <Label FontSize="Medium"
                               FontAttributes="Bold, Italic"
                               HorizontalOptions="Center"
                               VerticalOptions="FillAndExpand"
                               Text="{Binding Data.Name}"
                               Style="{StaticResource ValueStyle}" />

                        <Image  x:Name="ImageLabel"
                                Source="{Binding Data.ImageURI}"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand"
                                Aspect="AspectFit"
                                Margin="10" />

                        <Label FontSize="Medium"
                               HorizontalOptions="Center"
                               VerticalOptions="FillAndExpand"
                               Text="{Binding Data.Description}"
                               Style="{StaticResource ValueStyle}" />
                    </StackLayout>


                    <StackLayout Grid.Row="0"
                                 Grid.Column="1"
                                 HorizontalOptions="FillAndExpand"
                                 VerticalOptions="FillAndExpand"
                                 Padding="10"
                                 Style="{StaticResource OuterBoxStack}">
                        <Grid HorizontalOptions="Center"
                              VerticalOptions="FillAndExpand"
                              Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--LEVEL-->
                            <Label Text="LVL: "
                                   FontSize="Medium"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   VerticalOptions="Center" />
                            <StackLayout Grid.Row="0"
                                         Grid.Column="1"
                                         Orientation="Horizontal"
                                         VerticalOptions="Center">

                                <Label Style="{StaticResource ValueStyle}"
                                       FontAttributes="Bold"
                                       Text="{Binding Data.Level, StringFormat='  {0:G}'}"
                                       HorizontalOptions="Start"
                                       HorizontalTextAlignment="Start"
                                       VerticalOptions="Center"
                                       FontSize="Medium">
                                    <Label.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Label.Margin>
                                </Label>
                                <Slider Maximum="20"
                                        IsEnabled="False"
                                        Minimum="1"
                                        Value="{Binding Data.Level}"
                                        BackgroundColor="White"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Center">
                                    <Slider.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Slider.Margin>
                                </Slider>
                            </StackLayout>

                            <!--ATTACK-->
                            <Label Text="ATK: "
                                   FontSize="Medium"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   VerticalOptions="Center" />
                            <StackLayout Grid.Row="1"
                                         Grid.Column="1"
                                         Orientation="Horizontal"
                                         VerticalOptions="Center">

                                <Label Style="{StaticResource ValueStyle}"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Start"
                                       Text="{Binding Data.Attack, StringFormat='  {0:G}'}"
                                       HorizontalTextAlignment="Start"
                                       VerticalOptions="Center"
                                       FontSize="Medium">
                                    <Label.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Label.Margin>
                                </Label>
                                <Slider Maximum="20"
                                        IsEnabled="False"
                                        Minimum="1"
                                        Value="{Binding Data.Attack}"
                                        BackgroundColor="White"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Center">
                                    <Slider.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Slider.Margin>
                                </Slider>
                            </StackLayout>

                            <!--DEFENSE-->
                            <Label Text="DEF: "
                                   FontSize="Medium"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   VerticalOptions="Center" />
                            <StackLayout Grid.Row="2"
                                         Grid.Column="1"
                                         Orientation="Horizontal"
                                         VerticalOptions="Center">

                                <Label Style="{StaticResource ValueStyle}"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Start"
                                       Text="{Binding Data.Defense, StringFormat='  {0:G}'}"
                                       HorizontalTextAlignment="Start"
                                       VerticalOptions="Center"
                                       FontSize="Medium">
                                    <Label.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Label.Margin>
                                </Label>
                                <Slider Maximum="20"
                                        IsEnabled="False"
                                        Minimum="1"
                                        Value="{Binding Data.Defense}"
                                        BackgroundColor="White"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Center">
                                    <Slider.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Slider.Margin>
                                </Slider>
                            </StackLayout>

                            <!--SPEED-->
                            <Label Text="SPD: "
                                   FontSize="Medium"
                                   Grid.Row="3"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   VerticalOptions="Center" />
                            <StackLayout Grid.Row="3"
                                         Grid.Column="1"
                                         Orientation="Horizontal"
                                         VerticalOptions="Center">

                                <Label Style="{StaticResource ValueStyle}"
                                       FontAttributes="Bold"
                                       Text="{Binding Data.Speed , StringFormat='  {0:G}'}"
                                       HorizontalOptions="Start"
                                       HorizontalTextAlignment="Start"
                                       VerticalOptions="Center"
                                       FontSize="Medium">
                                    <Label.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Label.Margin>
                                </Label>
                                <Slider Maximum="20"
                                        IsEnabled="False"
                                        Minimum="1"
                                        Value="{Binding Data.Speed}"
                                        BackgroundColor="White"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Center">
                                    <Slider.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Slider.Margin>
                                </Slider>
                            </StackLayout>

                            <!--RANGE-->
                            <Label Text="RNG: "
                                   FontSize="Medium"
                                   Grid.Row="4"
                                   Grid.Column="0"
                                   Style="{StaticResource LabelStyle}"
                                   VerticalOptions="Center" />
                            <StackLayout Grid.Row="4"
                                         Grid.Column="1"
                                         Orientation="Horizontal"
                                         VerticalOptions="Center">

                                <Label Style="{StaticResource ValueStyle}"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Start"
                                       Text="{Binding Data.Range, StringFormat='  {0:G}'}"
                                       HorizontalTextAlignment="Start"
                                       VerticalOptions="Center"
                                       FontSize="Medium">
                                    <Label.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Label.Margin>
                                </Label>
                                <Slider Maximum="20"
                                        IsEnabled="False"
                                        Minimum="1"
                                        Value="{Binding Data.Range}"
                                        BackgroundColor="White"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Center">
                                    <Slider.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS"
                                                Value="15,0" />
                                            <On Platform="Android"
                                                Value="10,0" />
                                        </OnPlatform>
                                    </Slider.Margin>
                                </Slider>
                            </StackLayout>
                            
                            <!-- Max Health Value-->
                            <StackLayout Orientation="Horizontal"
                                         Grid.Row="5"
                                         Grid.Column="0"
                                         Grid.ColumnSpan="2">
                                <Label Text="HP: "
                                       FontSize="Medium"
                                       Style="{StaticResource LabelStyle}" />

                                <Label x:Name="MaxHealthValue"
                                       Text="{Binding Data.MaxHealth, StringFormat= '{0:G}'}"
                                       Style="{StaticResource ValueStyle}"
                                       FontAttributes="Bold"
                                       FontSize="Medium"/>
                            </StackLayout>
                        </Grid>
                    </StackLayout>



                    <StackLayout Grid.Row="1"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2"
                                 x:Name="ItemBox"
                                 Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 HeightRequest="100">
                    </StackLayout>







                    <AbsoluteLayout Padding="0"
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="CenterAndExpand"
                                    Grid.ColumnSpan="2">
                        <Frame x:Name="PopupLoadingView"
                               IsVisible="false"
                               WidthRequest="300"
                               Opacity=".95"
                               VerticalOptions="End"
                               AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"
                               AbsoluteLayout.LayoutFlags="PositionProportional"
                               BorderColor="Black"
                               BackgroundColor="Gray"
                               CornerRadius="5"
                               IsClippedToBounds="true">


                            <StackLayout Style="{StaticResource VerticalStack}"
                                         HorizontalOptions="CenterAndExpand"
                                         VerticalOptions="CenterAndExpand"
                                         Padding="2">
                                <Image x:Name="PopupItemImage"
                                       Style="{StaticResource ImageLargeStyle}" />

                                <Label x:Name="PopupItemName"
                                       Style="{StaticResource PopupItemTextStyle} "
                                       MaxLines="2"
                                       LineBreakMode="WordWrap" />
                                <Label x:Name="PopupItemDescription"
                                       Style="{StaticResource PopupItemTextStyle}"
                                       MaxLines="2"
                                       LineBreakMode="WordWrap" />

                                <StackLayout Style="{StaticResource HorizontalStack}">
                                    <Label Text="Location : "
                                           Style="{StaticResource LabelStyle}" />
                                    <Label x:Name="PopupItemLocation"
                                           Style="{StaticResource ValueStyle}" />
                                </StackLayout>

                                <StackLayout Style="{StaticResource HorizontalStack}">
                                    <Label x:Name="PopupItemAttribute"
                                           Style="{StaticResource LabelStyle}" />
                                    <Label x:Name="PopupItemValue"
                                           Style="{StaticResource ValueStyle}" />
                                </StackLayout>

                                <Button x:Name="PopupCloseButton"
                                        Clicked="ClosePopup_Clicked"
                                        Text="Close" />
                            </StackLayout>
                        </Frame>
                    </AbsoluteLayout>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>